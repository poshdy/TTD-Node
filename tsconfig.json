{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "target": "ES2017",
    "outDir": "dist",
    "allowImportingTsExtensions": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["esnext"],
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
